<%- include('../layouts/commonHeader.ejs') %>

  <section class="vh-100 "
    style="background-image: url('images/greencasabg.avif'); background-position: center; background-repeat: no-repeat; background-size: cover;">
    <div class="container py-5 h-100 ">

      <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="col col-md-4">

          <div class="card border border-success " style="border-radius: 1rem ,bold;">

            <div class="row g-0">

              <div class="col-md-12 col-lg-12 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">

                  <% if (typeof message !=='undefined' ) { %>
                    <div class="alert alert-info" role="alert" style="text-align: center;">
                      <%= message %>
                    </div>
                    <% } %>

                      <form action="/admin/forget" method="post">



                        <h5 class="fw-bold mb-2 pb-2 text-center text-uppercase" style="letter-spacing: 1px; ">Forget
                          Password
                        </h5>
                        <div class="form-outline mb-1">
                          <input type="email" name="email" class="form-control form-control-md" />
                          <label class="form-label">Email address</label>
                        </div>


                        <div class="pt-1 mb-1">
                          <button class="btn btn-md btn-block text-white" style="background-color: #204f38;"
                            type="submit">Send Reset Link</button>
                        </div>



                      </form>


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../layouts/footer.ejs') %>