<%- include('../layouts/commonHeader.ejs') %>


  <section class="vh-100 "
    style="background-image: url('images/greencasabg.avif'); background-position: center; background-repeat: no-repeat; background-size: cover;">
    <div class="container py-5 h-100 ">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-md-6">
          <div class="card border border-success " style="border-radius: 1rem ,bold;">
            <div class="row g-0">

              <div class="col-md-12 col-lg-12 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">

                  <% if (typeof message !=='undefined' ) { %>
                    <div class="alert alert-info" role="alert" style="text-align: center;">
                      <%= message %>
                    </div>
                    <% } %>

                      <form action="" method="post" enctype="multipart/form-data">

                        <h5 class="fw-bold mb-2 pb-2 text-center text-uppercase" style="letter-spacing: 1px; ">Sign Up
                        </h5>
                        <div class="form-outline mb-1">
                          <input type="text" id="form3Example1cg" name="name" class="form-control form-control-md" />
                          <label class="form-label" for="form3Example1cg">Your Name</label>
                        </div>
                        <% if (errors && errors.name) { %>
                          <p style="color: red; font-size: 15px;">
                            <%= errors.name.msg %>
                          </p>
                          <% } %>

                            <div class="form-outline mb-1">
                              <input type="email" id="form3Example3cg" name="email"
                                class="form-control form-control-md" />
                              <label class="form-label" for="form3Example3cg">Your Email</label>
                            </div>
                            <% if (errors && errors.email) { %>
                              <p style="color: red; font-size:  15px;">
                                <%= errors.email.msg %>
                              </p>
                              <% } %>
                                <div class="form-outline mb-1">
                                  <input type="number" id="form3Example4c" name="mobile"
                                    class="form-control form-control-md" />
                                  <label class="form-label" for="form3Example4c">Mobile Number</label>
                                </div>

                                <% if (errors && errors.mobile) { %>
                                  <p style="color: red; font-size:  15px;">
                                    <%= errors.mobile.msg %>
                                  </p>
                                  <% } %>


                                    <div class="form-outline mb-1">
                                      <input type="password" id="form3Example4cdg" name="password"
                                        class="form-control form-control-md" />
                                      <label class="form-label" for="form3Example4cdg">Password</label>
                                    </div>
                                    <% if (errors && errors.password) { %>
                                      <p style="color: red; font-size:  15px;">
                                        <%= errors.password.msg %>
                                      </p>
                                      <% } %>
                                        <div class="form-outline mb-1">
                                          <input type="password" id="form3Example4cdg" name="confirmPassword"
                                            class="form-control form-control-md" />
                                          <label class="form-label" for="form3Example4cdg">Confirm Password</label>
                                        </div>
                                        <% if (errors && errors.confirmPassword) { %>
                                          <p style="color: red; font-size:  15px;">
                                            <%= errors.confirmPassword.msg %>
                                          </p>
                                          <% } %>

                                            <div class="d-flex justify-content-center">
                                              <button type="submit" style="background-color: #204f38;"
                                                class="btn btn-block btn-md gradient-custom-4 text-white">Register</button>
                                            </div>

                                            <p class="mb-3 pb-lg-2" style="color: black;">Have already an account? <a
                                                href="/login" style="color: #204f38;"><i
                                                  class="me-2 text-black"></i><b>Login Here</b></a></p>

                      </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>




  <%- include('../layouts/footer.ejs') %>